{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "format.schema.json",
    "title": "GicaTesis Format Schema",
    "description": "Schema base para formatos de tesis con validación mínima requerida.",
    "type": "object",
    "required": [
        "_meta"
    ],
    "properties": {
        "_meta": {
            "type": "object",
            "required": [
                "id",
                "uni"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Identificador único del formato"
                },
                "uni": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^[a-z0-9_-]+$",
                    "description": "Código de universidad (minúsculas)"
                },
                "categoria": {
                    "type": "string",
                    "description": "Categoría del formato"
                }
            },
            "additionalProperties": true
        },
        "caratula": {
            "type": "object",
            "additionalProperties": true,
            "description": "Datos de carátula (estructura variable)"
        },
        "configuracion": {
            "type": "object",
            "properties": {
                "ruta_logo": {
                    "type": "string"
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}